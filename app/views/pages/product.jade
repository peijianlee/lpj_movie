extends ../layout_index

block content
	link(href="/css/product.css",rel="stylesheet")
	each cat in categories
		.wrap.iproduct_list
			h3
				a.fr(href="/store/sort/"+cat.attributes)
					| 更多
					i.icon-double-angle-right
				i.icon-magnet.mr10
				| #{cat.attributes}
			div.iproduct_frame
				each item in cat.pid
					.iproduct(id=item.id)
						include ../themplate/product.jade
	if materialCategories && materialCategories.length > 0
		.wrap.iproduct_list
			h3
				i.icon-magnet.mr10
				| 材质介绍
		.wrap.imaterial_list.mb15
			each item in materialCategories
				a(href="/store/material/#{item.attributes}", style="background-image:url(/banner/#{item.banner})").tc
					span.fb #{item.attributes}
						b #{item.pid.length}

	.bg_fixed
	script(src="/js/shopcart.js")