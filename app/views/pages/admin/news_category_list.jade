extends ../../layout_admin

block content
	.admin_wrap
		h2.pageheader
			i.icon-pencil
			| #{title}
		.contentpanel
			table.table.table_hover.table_bordered.table_striped
				thead
					tr
						th 分类名称
						th 录入时间
						th 查看
						th 更新
						th 删除
				tbody.tc
					if newscategories && newscategories.length > 0
						each item in newscategories
							tr(class="item-id-#{item._id}")
								td 
									a(href='/results?cat=#{item._id}&p=0',target="_blank").btn.btn-info
										span.catName #{item.name}
										b &nbsp;( #{item.news.length} )
								td #{moment(item.meta.updateAt).format('YYYY/MM/DD HH:mm:ss')}
								td
									a.button.button-primary.button-rounded.button-small(href='/results?cat=#{item._id}&p=0',target="_blank") 查看
								td
									span.button.button-highlight.button-rounded.button-small.catChange(data-toggle="modal", data-target="#catChangeModal", value="#{item._id}") 修改
								td
									if item.news.length == 0
										button.button.button-caution.button-rounded.button-small.newscategorydel(type="button", data-id="#{item._id}") 删除
					else
						tr
							td.lead.bg-info.text-info(colspan="5")
								strong 
									i.icon-info-sign(style="margin-left:10px;margin-right:5px")
									| 没有任何电影分类！
				tfood
					td(colspan="10")
						//- a.button.button-raised.button-primary(href="/admin/news/category/new") 新增分类
						span.button.button-raised.button-primary(data-toggle="modal", data-target="#catModal") 新增分类
	#catModal.imodal
		form(method="post", action="/admin/news/category")
			.imodal-header 新增文章分类
			.imodal-body
				.form_group
					label.control_label(for="inputCategory") 文章分类
					.control_div
						input#inputCategory.form_control(type="text", name="newscategory[name]")
			.imodal-footer
				.form_group(style="margin:0")
					label.control_label
					button.newscategoryBtn.button.button-raised.button-primary.button-small(type="sumbit") 录入
					span.button.button-raised.button-small.modal_close(style="margin-left:15px;") 取消
	#catChangeModal.imodal
		form(method="post", action="/admin/news/category")
			input#newscategoryid(type="hidden", name="newscategory[_id]", value="58808aa21c58371980017bd8")
			.imodal-header 文章分类名称修改
			.imodal-body
				.form_group
					label.control_label(for="changeCategory") 文章分类
					.control_div
						input#changeCategory.form_control(type="text", name="newscategory[name]")
			.imodal-footer
				.form_group(style="margin:0")
					label.control_label
					button.catChangeBtn.button.button-raised.button-primary.button-small(type="sumbit") 修改
					span.button.button-raised.button-small.modal_close(style="margin-left:15px;") 取消
	script(src="/js/admin_delete.js")
	script.
		//- 文章分类删除
		del('newscategorydel','news/category');

		
		var catName;
		var changeCatName;
		var catId;
		var changeCategory = document.getElementById('changeCategory')
		$('.catChange').click(function(){
			var $t = $(this),
				$tr = $t.parents('tr');
			catName = $tr.find('.catName').text();
			changeCategory.value = catName;
			catId = $(this).attr('value');
			document.getElementById('newscategoryid').value = catId;
		});
		$('.newscategoryBtn').click(function(){
			if($('#inputCategory').val().replace(/\s/g, "")==""){
				artalert('文章分类名称不能为空！')
				return false;
			}
			artalert('添加成功!')
		});
		$('.catChangeBtn').click(function(){
			if(catName==$('#changeCategory').val()){
				return false;
			}
			artalert('文章分类名称修改成功!')
		});

