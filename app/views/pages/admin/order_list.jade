extends ../../layout_admin

block content
	.admin_wrap
		h2.pageheader
			i.icon-list
			| #{title}
		.contentpanel
			.button-group
				if !type && !name
					span.button.button-primary.fs14.fb 全部询价单
				else
					a(href="/admin/order/list").button.fs14.fb 全部询价单
				span.button-dropdown(data-buttons="dropdown")
					if !type
						span.button.fs14.fb 类型
							i.icon-angle-down.ml10
					else
						- if(type.toString() === 'company'){
						-	var cntype = "企业"
						- }else{
						-	var cntype = "个人"
						- }
						span.button.button-primary.fs14.fb #{cntype}
							i.icon-angle-down.ml10
					ul.button-dropdown-list.is-below.tc
						li.button-dropdown-divider: a(href="?type=company")
							i.icon-building.mr10
							|企业
						li.button-dropdown-divider: a(href="?type=user")
							i.icon-user.mr10
							|个人
			if name
				p.fs14.cd.admin_order_tip.mb10
					i.icon-search.mr10
					b.cBlue.mr5 #{orders[0].uid.name}
					| 用户，共提交了
					b  ( #{orders.length} ) 
					| 条询价单记录

				//- span.button-dropdown(data-buttons="dropdown")
					span.button.fs14 是否
					ul.button-dropdown-list.is-below.tc
						li: a 企业
						li: a 个人
			table.table.table_hover.table_bordered.table_striped
				thead
					tr
						th 订单ID
						th 发送时间
						th 是否过期
						th 发送用户
						th 类型
						th 操作
				tbody
					if orders && orders.length > 0
						each item in orders
							tr
								td.tc
									a(href="/admin/order/#{item.id}") #{item.id}
								td.tc 
									span.cGray #{moment(item.meta.createAt).format('YYYY/MM/DD HH:mm:ss')}
									br
									| #{moment(item.meta.createAt).add(5, 'days').format('YYYY/MM/DD HH:mm:ss')}
								td.tc #{moment(item.meta.createAt).add(5, 'days').fromNow()}
								//- td.tc #{moment(item.meta.createAt).add(150, 'minute').fromNow()}
								//- td.tc #{moment().isBetween(moment(item.meta.createAt), moment(item.meta.createAt).add(130, 'minute'))}
								td.tc
									a(href="?name=#{item.uid.id}") #{item.uid.name}
								td.tc
									if item.from.company
										span 企业
									else
										span 个人
								td.tc 
									a(href="#{item.id}").button.button-highlight.button-rounded.button-small(type="button", data-id="#{item._id}", data-src="#{item.imgsrc}") 处理