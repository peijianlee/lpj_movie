extends ../layout_index

block content
	link(href="/css/product.css",rel="stylesheet")
	.wrap.nav
		a(href="/news")
			i.fs14.icon-home
		a(href="/store") 商品首页
		//- span #{linkSort}
		b #{category.attributes}
	if categories && categories.length > 0
	.goodsSortFrameBg(style="background-image:url(/banner/#{category.banner});")
		.goodsSortFrame.mt15.pr
			dl.goodsMaterial_side_nav
				dt
					i.icon-reorder.mr10
					| 商品分类
				each cats in categories
					dd
						if cats.id.toString() === category.id.toString()
							a.animation.On(href="/store/#{linkSort}/#{cats.attributes}")
								i.icon-angle-right.mr10
								| #{cats.attributes}
						else
							a.animation(href="/store/#{linkSort}/#{cats.attributes}")
								i.icon-angle-right.mr10
								| #{cats.attributes}
			div.goodsSort.goodsMaterial
				if category.description
					.goodsSortHead
						h2: span #{category.attributes}
						div.goodsSortDescription !{category.description}
				if products && products.length > 0
					div.sub_product_frame_row3
						div.sub_product_header
							i.icon-magnet.mr10
							| 推荐商品
						each item in products
							.sub_page_product(id=item.id)
								include ../themplate/product.jade
	.bg_fixed
	script(src="/js/shopcart.js")