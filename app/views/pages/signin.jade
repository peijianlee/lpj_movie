extends ../layout_index

block content
	.sign_bg.blur(style="background-image:url(#{bgsrc})")
	.sign_form
		.sign_form_head &nbsp;
			i.icon-lock
			span #{title}
		ul.sign_form_content
			li
				label(for="signinName") &nbsp;
					i.icon-user 
					| &nbsp;用户名
				if name
					input#signinName.signinName.form_control(name="user[name]", type="text" value="#{name}")
					if !password
						.sign_tip.inlineBlock
							i.icon-info-sign
							|&nbsp;&nbsp;用户名 “&nbsp;
							strong #{name}
							|&nbsp;” 已经存在了
				else
					input#signinName.signinName.form_control(name="user[name]", type="text")
			li
				label(for="signinPassword") &nbsp;
					i.icon-key 
					| &nbsp;密码
				input#signinPassword.signinPassword.form_control(name="user[password]",type="password")
				if password
					.alert.alert-warning.alert-dismissible(style="margin-top:5px;")
						strong 密码错误
						|&nbsp; 请重新输入
			li.sign_tip
				i.icon-question-sign 
				| &nbsp;还没有注册会员？
				a.cBlue.textUnderline(href="signup") 点击注册
			
		.sign_form_foot
			span.button.button-raised.button-primary.signin-success 登 录
			.sign_form_foot_info
				h6 IMOOC
				p 基于NodeJs+MongoDB搭建的电影网站 <br /> 备案编号:110105000501 Copyright © 2006-2017
	h3.bgword
		i.icon-quote-left.icon-3x.pull-left
		| #{bgword}
	script(src="/js/admin.js")
