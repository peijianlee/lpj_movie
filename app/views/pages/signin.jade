extends ../layout_index

block content
	.sign_bg.blur(style="background-image:url(#{bgsrc})")
	.sign_form
		.sign_form_head &nbsp;
			i.icon-lock
			span #{title}
		ul.sign_form_content
			li
				label(for="signinName") &nbsp;
					i.icon-user 
					| &nbsp;用户名
				if name
					input#signName.signName.form_control(name="user[name]", type="text", value="#{name}", placeholder="请输入用户名")
					if !password
						.sign_tip.inlineBlock
							i.icon-info-sign
							|&nbsp;&nbsp;用户名 “&nbsp;
							strong #{name}
							|&nbsp;” 已经存在了
				else
					input#signName.signName.form_control(name="user[name]", type="text", placeholder="请输入用户名")
			li
				label(for="signinPassword") &nbsp;
					i.icon-key 
					| &nbsp;密码
				input#signPassword.signPassword.form_control(type="password", placeholder="请输入密码")
				if password
					.alert.alert-warning.alert-dismissible(style="margin-top:5px;")
						strong 密码错误
						|&nbsp; 请重新输入
			li
				label(for="captcha") &nbsp;验证码
				input#captcha.captcha.form_control(type="text", placeholder="请输入验证码",maxlength="4")
				div.mt5
					span.cp.changeCaptcha !{captcha.data}
			li.sign_tip
				i.icon-question-sign
				| &nbsp;还没有注册会员？
				a.cBlue.textUnderline(href="signup") 点击注册
			
		.sign_form_foot
			span.button.button-raised.button-primary.sign-success(signtype="signin") 登 录
			.sign_form_foot_info
				h6 IMOOC
				p 基于NodeJs+MongoDB搭建的电影网站 <br /> 备案编号:110105000501 Copyright © 2006-2017
	h3.bgword
		i.icon-quote-left.icon-3x.pull-left
		| #{bgword}

	script(src="js/sign.js")

