extends ../layout_index

block content
	.wrap
		.nav.mt10
			a(href="/news")
				i.fs14.icon-home
			a(href="/store") store
			a(href="/inquirylist") inquiry list
			span create inquiry list
		div.progress.progress_step_2
			div.progress_step
				span.s_step 1
				p inquiry list
			div.progress_step
				span.s_step 2
					span.s_1
					span.s_2
				p YOUR EMAIL
			div.progress_step
				span.s_step 3
				p SUCCESS
			div.progress_line
			div.progress_step_line
		form(method="post", action="/create/inquirylist", enctype="multipart/form-data")
			table.shopcart_list
				caption
					i.icon-list.mr10
					| INQUIRY LIST
				thead
					tr
						th(width="140") ITEM
						th.tl DESCRIPTION
						th SIZE
						th QUANTITY
						th PRICE
				tbody
					if products && products.length>0
						each item in products
							tr(id=item.id)
								td
									img(src="/images_data/"+item.id+"/"+item.cover)
								td.shopcart_goods_name.vatop
									ul
										li
											h3 #{item.title}
										if item.material && item.material.length > 0
											li 材质： 
												each i_material in item.material
													span.ml5 #{i_material.attributes}
										if item.color && item.color.length > 0
											li 颜色：
												each i_color in item.color
													span.ml5 #{i_color.attributes}
										li 售价：
											b.ml5 $#{item.price}.00

								td.tc.vatop 宽#{item.size.w}×深#{item.size.d}×高#{item.size.h} (cm)
								td.tc.vatop 1 PCS
								td.tc.vatop
									b.fs16.cp.editPrice $#{item.price}.00
						tr
							td(colspan="5")
								button.button.button-glow.button-primary.button-rounded.button-raised.button-primary(type="sumbit") 创建询价单

	.bg_fixed