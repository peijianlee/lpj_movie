if !header_hide
	.header-top.cd
		.wrap
			span
				if moment().format('a') === 'am'
					| 早上好！
				else
					| 下午好！
			if !user
				span 欢迎来到 vinte home
				a(href="/signup")
					i.icon-pencil.mr5
					| 注册
				a(href="/signin")
					i.icon-user.mr5
					| 登录
			else
				span #{user.name}
				a(href="/user/#{user.name}")
					i.icon-user.mr5
					| 个人中心
				if user.role > 50
					a(href="/admin/index")
						i.icon-cog.mr5
						| 后台管理
				a.navbar-link.mr5(href="/logout")
					i.icon-signout.mr5
					| 退出登录
	- if(recommendProducts) var headerHasBgcolor = 'index-banner-bgcolor'
	div(class="#{headerHasBgcolor + ' header'}")
		.wrap
			h2.logo
				| 梵特家具网
				a.logo-icon(href="/")
					i.icon-home.base-color-dark
			a(href="/inquiry").head-btn-style.fr.ml10
				i.icon-reorder.mr10
				| 询价单
				if cart_goods
					b.head_shopcart_num #{cart_goods.length}
				else
					b.head_shopcart_num 0
			form(method="GET", action="/results")
				.head-search.fr
					input(type="text",name="q",value=searchword)
					button.h_search_btn.icon-search(type="submit")

			ul.hmenu
				if newscategories && newscategories.length>0
					each cat in newscategories
						li: a(href="###") #{cat.name}